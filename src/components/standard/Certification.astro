---
const { certification } = Astro.props as { certification: Certification };
---

<section>
  <div
    class="flex flex-col items-start justify-between print:flex-row md:flex-row"
  >
    <div>
      <p class="text-lg font-semibold">{certification.title}</p>
      <p class="text-base font-semibold">{certification.issuer}</p>
    </div>
    <p>
      <span class="text-sm font-semibold print:text-lg md:text-lg"
        >{certification.startDate} - {certification.expirationDate}</span
      >
    </p>
  </div>
  <div class="mt-2 text-base">
    {
      certification.description && (
        <ul class="ml-4 list-disc">
          {certification.description.map((desc) => (
            <li>{desc}</li>
          ))}
        </ul>
      )
    }
  </div>
</section>
